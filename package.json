{
  "name": "dark-war",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "type": "commonjs",
  "scripts": {
    "dev": "npm run build:ts && electron .",
    "build": "npm run sprites && npm run build:ts && electron-builder -mwl",
    "build:ts": "npm run sprites && tsc && vite build",
    "watch": "vite build --watch",
    "type-check": "tsc --noEmit",
    "sprites": "node scripts/generate-sprites.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/rot-js": "^0.6.5",
    "canvas": "^3.2.0",
    "electron": "^31.3.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.kylir.darkwar",
    "files": [
      "electron/**/*",
      "app/**/*",
      "!**/*.map"
    ],
    "mac": {
      "category": "public.app-category.games",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "pixi.js": "^8.14.0",
    "rot-js": "^2.2.1"
  }
}
